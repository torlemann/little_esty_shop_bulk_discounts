<h1>Edit Discount</h1>
<% flash.each do |type, msg| %>
    <div class='flash_red'><%= msg %></div>
    <br>
<% end %>
<%= form_with url: merchant_bulk_discount_path(@bulk_discount.merchant, @bulk_discount), method: :patch, local: true do |f| %>
  <%= f.label :percentage_discount %>
  <%= f.text_field :percentage_discount, value: @bulk_discount.percentage_discount %>
  <%= f.label :quantity_threshold %>
  <%= f.number_field :quantity_threshold, value: @bulk_discount.quantity_threshold %>
  <%= f.submit "Submit" %>
<% end %>